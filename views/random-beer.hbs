<div id='randomBeer'>

  {{#each randomBeer}}
    <div>
      <img src='{{this.image_url}}' alt='beer' width='100px' />
    </div>
    <div>
      <h2>{{this.name}}</h2>
      <p><em>{{this.tagline}}</em></p>
      <p>{{this.description}}</p>
      <p><strong>Food Pairing:</strong></p>
      {{#each this.food_pairing}}
        <li>{{this}}</li>
      {{/each}}
      <p><p><strong>Brewers Tips:</strong></p>{{this.brewers_tips}}</p>
    </div>

  {{/each}}
</div>