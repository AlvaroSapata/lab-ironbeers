<div id='allBeers'>
  {{#each allBeers}}
    <div class="card">
      <div class="subcard">
        <div>
          <img src='{{this.image_url}}' alt='beer' width='100px' />
        </div>
        <div>
          <h2><a href='/beers/{{this.id}}'>{{this.name}}</a></h2>
          <p><em>{{this.tagline}}</em></p>
          <p>{{this.description}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>